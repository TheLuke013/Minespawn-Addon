{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "minespawn:big_bertha",
            "materials": {
                "default": "entity",
                "enchanted": "entity_alphatest_glint"
            },
            "textures": {
                "default": "textures/weapons/big_bertha",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.big_bertha"
            },
            "animations": {
                "hold_first_person": "animation.weapon.hold_first_person",
                "attack_controller": "controller.animation.weapon_attack",
                "attack": "animation.weapon.hold_first_person_attack",
                "hold_third_person": "animation.weapon.hold_third_person"
            },
            "scripts": {
                "animate": [
                    {
                        "hold_first_person": "context.is_first_person == 1.0 && !query.is_delayed_attacking"
                    },
                    {
                        "hold_third_person": "context.is_first_person == 0.0"
                    }
                ]
            },
            "render_controllers": [
                "controller.render.item_default"
            ]
        }
    }
}