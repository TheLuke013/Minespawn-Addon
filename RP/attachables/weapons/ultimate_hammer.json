{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "twisted:ultimate_hammer",
			"materials": {
				"default": "entity"
			},
			"textures": {
				"default": "textures/weapons/ultimate_hammer"
			},
			"geometry": {
				"default": "geometry.ultimate_hammer"
			},
			"animations": {
				"hold_first_person": "animation.weapon.hold_first_person",
				"hold_first_person_attack": "animation.weapon.hold_first_person_attack",
				"hold_third_person": "animation.weapon.hold_third_person2"
			},
			"scripts": {
				"parent_setup": "t.ultimate_attack = v.attack_time;",
				"pre_animation": [
					"v.ultimate = query.get_equipped_item_name('main_hand') == 'ultimate_hammer';",
					"v.attack_time = t.ultimate_attack ?? 0;",
					"v.c_ifp = context.is_first_person;"
				],
				"animate": [
					{
						"hold_first_person": "v.c_ifp && !v.attack_time"
					},
					{
						"hold_first_person_attack": "v.ultimate && v.attack_time && v.c_ifp"
					},
					{
						"hold_third_person": "!v.c_ifp"
					}
				]
			},
			"render_controllers": [
				"controller.render.weapon"
			]
		}
	}
}