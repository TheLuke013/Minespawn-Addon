{
    "format_version": "1.20.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "twisted:big_bertha",
            "materials": {
                "default": "entity"
            },
            "textures": {
                "default": "textures/weapons/big_bertha"
            },
            "geometry": {
                "default": "geometry.big_bertha"
            },
            "animations": {
                "hold_first_person": "animation.weapon.hold_first_person",
                "hold_third_person": "animation.weapon.hold_third_person",
                "hold_first_person_attack": "animation.weapon.hold_first_person_attack"
            },
            "scripts": {
                "parent_setup": "t.big_bertha_attack = v.attack_time;",
                "pre_animation": [
                    "v.big_bertha = query.get_equipped_item_name('main_hand') == 'big_bertha';",
                    "v.attack_time = t.big_bertha_attack ?? 0;",
                    "v.c_ifp = context.is_first_person;"
                ],
                "animate": [
                    {
                        "hold_first_person": "v.c_ifp && !v.attack_time"
                    },
                    {
                        "hold_third_person": "!v.c_ifp"
                    },
                    {
                        "hold_first_person_attack": "v.big_bertha && v.attack_time && v.c_ifp"
                    }
                ]
            },
            "sound_effects": {
                "hold_first_person_attack": "mob.mobjira.roar"
            },
            "render_controllers": [
                "controller.render.weapon"
            ]
        }
    }
}