{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "minespawn:big_bertha",
            "materials": {
                "default": "entity"
            },
            "textures": {
                "default": "textures/weapons/big_bertha"
            },
            "geometry": {
                "default": "geometry.big_bertha"
            },
            "animations": {
                "hold_first_person": "animation.weapon.hold_first_person",
                "first_person_attack": "animation.weapon.hold_first_person_attack",
                "hold_third_person": "animation.weapon.hold_third_person"
            },
            "scripts": {
                "pre_animation": [
                    "variable.ultima_blade = query.get_equipped_item_name('main_hand') == 'big_bertha';"
                ],
                "animate": [
                    {
                        "hold_first_person": "context.is_first_person == 1.0"
                    },
                    {
                        "hold_third_person": "context.is_first_person == 0.0"
                    },
                    {
                        "first_person_attack": "variable.ultima_blade && context.is_first_person && context.attack_time"
                    }
                ]
            },
            "render_controllers": [
                "controller.render.weapon"
            ]
        }
    }
}