{
	"format_version": "1.10.0",
	"minecraft:attachable": {
		"description": {
			"identifier": "minespawn:stelix_bertha",
			"materials": {
				"default": "entity"
			},
			"textures": {
				"default": "textures/weapons/stelix_bertha"
			},
			"geometry": {
				"default": "geometry.stelix_bertha"
			},
			"animations": {
				"hold_first_person": "animation.weapon.hold_first_person",
				"hold_first_person_attack": "animation.weapon.hold_first_person_attack",
				"hold_third_person": "animation.weapon.hold_third_person"
			},
			"scripts": {
				"parent_setup": "t.stelix_attack = v.attack_time;",
				"pre_animation": [
					"v.stelix = query.get_equipped_item_name('main_hand') == 'stelix_bertha';",
					"v.attack_time = t.stelix_attack ?? 0;",
					"v.c_ifp = context.is_first_person;"
				],
				"animate": [
					{
						"hold_first_person": "v.c_ifp && !v.attack_time"
					},
					{
						"hold_first_person_attack": "v.stelix && v.attack_time && v.c_ifp"
					},
					{
						"hold_third_person": "!v.c_ifp"
					}
				]
			},
			"render_controllers": [
				"controller.render.weapon"
			]
		}
	}
}