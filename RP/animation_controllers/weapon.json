{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.weapon_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.get_equipped_item_name('main_hand') == 'big_bertha' && v.attack_time"
						}
					]
				},
				"attack": {
					"transitions": [
						{
							"default": "!v.attack_time"
						}
					],
					"animations": [
						"hold_first_person_attack"
					]
				}
			}
		}
	}
}