{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.weapon_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.is_delayed_attacking"
						}
					]
				},
				"attack": {
					"on_exit": [
						"/say Attack animation finished!"
					],
					"transitions": [
						{
							"default": "!query.is_delayed_attacking"
						}
					]
				}
			}
		}
	}
}