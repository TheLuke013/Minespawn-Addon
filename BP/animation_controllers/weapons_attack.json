{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.royal_guardian_attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "query.get_equipped_item_name('main_hand') == 'royal_guardian' && variable.attack_time"
						}
					]
				},
				"attack": {
					"transitions": [
						{
							"default": "!variable.attack_time"
						}
					],
					"on_entry": [
						"/tag @s add royal_guardian_attacking"
					]
				}
			}
		},
